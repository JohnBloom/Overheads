<Window x:Class="Overheads.ShellView"
        x:Name="Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:micro="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Overheads.Helpers"
        xmlns:myns="clr-namespace:Overheads"
        WindowState="{Binding State, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, FallbackValue=Normal}"
        WindowStyle="{Binding Style, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, FallbackValue=SingleBorderWindow}"
        ResizeMode="{Binding Mode, UpdateSourceTrigger=PropertyChanged, Mode=OneWay, FallbackValue=CanResize}"
        Background="Black">

    <Window.Resources>
        <myns:ShellViewModel x:Key="ShellViewResource" />
    </Window.Resources>

    <Grid Background="White" x:Name="MainGrid" micro:Message.Attach="[Event KeyDown] = [Action PreviewKeyUp($eventArgs)];">
        <ContentControl x:Name="ActiveItem" /> 
    </Grid>

</Window>